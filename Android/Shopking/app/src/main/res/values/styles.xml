<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/shopking_blue</item>
        <item name="colorPrimaryDark">@color/shopking_dark_blue</item>
        <item name="colorAccent">@color/shopking_red</item>
    </style>

    <style name="ArticleName">
        <item name="android:textSize">@dimen/article_list_item_name_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="ArticleDescription">
        <item name="android:textSize">@dimen/article_list_item_description_text_size</item>
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="ArticlePrice">
        <item name="android:textSize">@dimen/article_list_item_price_text_size</item>
        <item name="android:textColor">@color/shopking_dark_blue</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="ArticleSale">
        <item name="android:textSize">@dimen/article_list_item_sale_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="CategoryName">
        <item name="android:textSize">@dimen/category_item_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="ToolbarDescription">
        <item name="android:textSize">@dimen/toolbar_description_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="DetailsTitle">
        <item name="android:textSize">@dimen/details_title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="IngredientName">
        <item name="android:textSize">@dimen/ingredient_text_size</item>
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="RecipeDescription">
        <item name="android:textSize">@dimen/recipe_description_text_size</item>
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="BlueText">
        <item name="android:textSize">@dimen/see_all_text_size</item>
        <item name="android:textColor">@color/shopking_medium_blue</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

</resources>
